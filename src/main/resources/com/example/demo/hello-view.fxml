<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="352.0" prefWidth="247.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>
    <Text text="Login">
      <font>
         <Font name="System Bold" size="21.0" />
      </font></Text>

    <Text text="Username:">
      <font>
         <Font name="System Italic" size="12.0" />
      </font></Text>
    <TextField fx:id="usernameField" />

    <Text text="Password:">
      <font>
         <Font name="System Italic" size="12.0" />
      </font></Text>
    <PasswordField fx:id="passwordField" />

    <Button onAction="#loginAction" text="Login" />
</VBox>
